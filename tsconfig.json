{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "dom",
            "es7"
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./build",
        "baseUrl": ".",
        // "typeRoots": [ "./node_modules/@types" ],
        "types": ["node", "chai", "@wdio/sync", "@wdio/mocha-framework"]
    },
    "include": [
        "./src/**/*.ts", "src/config/wdio.conf.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}